{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "resolveJsonModule": true,
        "jsx": "preserve",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@layouts/*": [
                "src/layouts/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ]
        }
    }
}
